<h1>Change Word Set</h1>
<form action="/output" method="POST">

    <input type="text" name="setWord" placeholder="Name this set of words" value="{{setWord}}"/>
    <input type="text" name="animal" placeholder="Any mammal you can think of" value="{{animal}}"/>
    <input type="text" name="thing" placeholder="Any object you can think of" value="{{thing}}"/>
    <input type="text" name="verb" placeholder="Past tense verb" value="{{verb}}"/>
    <input type="text" name="adjective" placeholder="Any adjective you can think of" value="{{adjective}}"/>
    <input type="number" name="number" placeholder="Any number you can think of" value="{{number}}"/>
  
<h1>Change Picture Set</h1>

    <input type="text" name="set" placeholder="Name Your Set" value="{{set}}"/>
    <input type="text" name="destination" placeholder="Any place you can think of" value="{{destination}}"/>
    <input type="text" name="mammal" placeholder="Any mammal you can think of" value="{{mammal}}"/>
    <input type="text" name="object" placeholder="Any Object you can think of" value="{{object}}"/>
    <input type="date" name="dateTaken" placeholder="Make up a date the pictures were taken" value="{{dateTaken}}"/>
   
<h1>Change Your Theme</h1>

    <select name="dropDownTheme">
        <option value="{{dropDownTheme}}"></option>
        <option value="nature">Nature</option>
        <option value="breakfast">Breakfast</option>
        <option value="murder-y">Murder-y</option>
    </select>
    <p>Or Try your luck at creating your own theme</p>
    <input type="text" name="writeInTheme" placeholder="Make up your own theme" value="{{writeInTheme}}" />
    <input type="submit" value="Change it!" />
    
</form>